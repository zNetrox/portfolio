<style>
    #loader {
        position: fixed;
        top: 0;
        width: 100vw;
        height: 100vh;
        color: rgb(var(--white));
        z-index: 9999;
    }

    #background {
        width: 100%;
        height: 100%;
        background: rgb(var(--black));
        z-index: -1;
    }

    #loader .part-1 {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    #counter {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 125px;
    }

    #loader .part-1 p:last-child {
        position: absolute;
        top: 85%;
        left: 50%;
        transform: translateX(-50%);
        text-transform: uppercase;
        color: rgb(var(--yellow));
    }

</style>

<script>
    import { gsap } from "gsap";
    import { wait } from '../js/libray.js'

    const counter = document.querySelector('#counter span')
    let valueCounter = 0



    const intervalCounter = setInterval(() => {
        if(valueCounter <= 100) {
            valueCounter += 13

            if (valueCounter > 100) {
                valueCounter = 100
            }

            counter.textContent = valueCounter
        } else {
            clearInterval(intervalCounter)
        }

        
    }, 300)

</script>







