---

interface Props {
    title: string;
    date: string;
}

const { title, date } = Astro.props

---

<ul>
    <span class="line"></span>
    <li>
        <div>
            <p class="title">{title}</p>
            <p class="right-text">{date}</p>
        </div>

        <div>
            <a href="#">
                <div class="cercle-button">
                    <div class="arrow">
                        <div><span></span></div>
                        <div><span></span></div>
                        <div><span></span></div>
                    </div>
                </div>
                <p class="title">Visiter</p>
            </a>
            <a class="right-text" href="#">Dépôt Git</a>
        </div>
    </li>
    <span class="line"></span>
</ul>

<style>
    h4 {
        font-size: clamp(1.5625rem, 0.4911rem + 2.8571vw, 2.8125rem); /* 45 > 25 */
		font-weight: 200;
        margin-bottom: 30px;
    }

    li {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 30px 0;
        overflow: hidden;
    }

    li > div:first-child {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        transition: .4s;
    }

    li > div:last-child {
        position: absolute;
        top: 50%;
        transform: translateY(100%);
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        transition: .4s;
    }

    li:hover {
  
    }

    li:hover > div:first-child {
        transform: translateY(calc(-100% - 30px));
    }

    li:hover > div:last-child {
        transform: translateY(-50%);
    }

    li div:last-child a {
        color: rgb(var(--black));
    }

    li div:last-child a:first-child {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .cercle-button {
        width: 85px;
        aspect-ratio: 1/1;
    }

    .title {
        font-size: 50px;
        font-weight: 200;
    }

    .right-text {
        font-size: 25px;
        font-weight: 200;
    }
</style>