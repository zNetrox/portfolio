---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	* {
    	margin: 0;
    	padding: 0;
		border: 0;
		background: transparent;
    	list-style: none;
    	text-decoration: none;
		box-sizing: border-box;
	}

	:root {
		--black: #252525;
		--white: #f2f2f2;
		--grey: #888888;
		--red: #E5252F;
		--yellow: #FFD700;

		--bezier: cubic-bezier(0.16, 1, 0.3, 1);
	}

	html {
		font-family: 'Telegraf';
		background: var(--white);
	}

	/* ---------- animation ---------- */

	[class*="slide-"] {
		transition: 1.4s var(--bezier);
	}

	.slide-up {
    	transform: translateY(35px);
    	opacity: 0;
    	transition: .5s;
	}

	.slide-up.anim {
    	opacity: 1;
    	transform: translateY(0);
		}

	.slide-left {
    	transform: translateX(-50px);
    	opacity: 0;
    	transition: .5s;
	}

	.slide-left.anim {
	    opacity: 1;
	    transform: translateX(-20px);
	}

	.slide-up-rotate {
	    opacity: 0;
	    transform: rotate(6deg) translateY(-200px);
	}

	.slide-up-rotate.anim {
	    opacity: 1;
	    transform: translateY(0) rotate(0);
	}

	.delay-01 {
	    transition-delay: .1s;
	}

	.delay-02 {
	    transition-delay: .2s;
	}

	.delay-03 {
	    transition-delay: .3s;
	}

	.delay-04 {
	    transition-delay: .4s;
	}

	.delay-05 {
	    transition-delay: .5s;
	}

	.delay-06 {
	    transition-delay: .6s;
	}

	.delay-07 {
	    transition-delay: .7s;
	}

	.delay-08 {
	    transition-delay: .8s;
	}

	.delay-09 {
	    transition-delay: .9s;
	}

	.delay-10 {
	    transition-delay: 1s;
	}

	/* ---------- font ---------- */

	@font-face {
  		font-family: 'Telegraf';
  		src: url('../font/telegraf/PPTelegraf-Ultralight.otf') format('woff');
  		font-weight: 200;
  		font-style: normal;
	}

	@font-face {
  		font-family: 'Telegraf';
  		src: url('../font/telegraf/PPTelegraf-UltralightSlanted.otf') format('woff');
  		font-weight: 200;
  		font-style: italic;
	}

	@font-face {
  		font-family: 'Telegraf';
  		src: url('../font/telegraf/PPTelegraf-UltralightOblique.otf') format('woff');
  		font-weight: 200;
  		font-style: oblique;
	}

	@font-face {
  		font-family: 'Telegraf';
  		src: url('../font/telegraf/PPTelegraf-Regular.otf') format('woff');
  		font-weight: 400;
  		font-style: normal;
	}

	@font-face {
  		font-family: 'Telegraf';
  		src: url('../font/telegraf/PPTelegraf-RegularSlanted.otf') format('woff');
  		font-weight: 400;
  		font-style: italic;
	}

	@font-face {
  		font-family: 'Telegraf';
  		src: url('../font/telegraf/PPTelegraf-RegularOblique.otf') format('woff');
  		font-weight: 400;
  		font-style: oblique;
	}

	@font-face {
  		font-family: 'Telegraf';
  		src: url('../font/telegraf/PPTelegraf-Ultrabold.otf') format('woff');
  		font-weight: 800;
  		font-style: normal;
	}

	@font-face {
  		font-family: 'Telegraf';
  		src: url('../font/telegraf/PPTelegraf-UltraboldSlanted.otf') format('woff');
  		font-weight: 800;
  		font-style: italic;
	}

	@font-face {
  		font-family: 'Telegraf';
  		src: url('../font/telegraf/PPTelegraf-UltraboldOblique.otf') format('woff');
  		font-weight: 800;
  		font-style: oblique;
	}
</style>